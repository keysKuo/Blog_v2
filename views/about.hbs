
      <!-- END header -->


    <section class="site-section pt-5">
      <div class="container">
        
        <div class="row blog-entries">
          <div class="col-md-12 col-lg-8 main-content">
            
            <div class="row">
              <div class="col-md-12">
                <h2 class="mb-4">Hi There! I'm {{bloggerName}}</h2>
                {{!-- <p class="mb-5"><img src="images/img_6.jpg" alt="Image placeholder" class="img-fluid"></p> --}}
                <p>{{user_bio}}</p>
              </div>
            </div>

            <div class="row mb-5 mt-5">
              <div class="col-md-12 mb-5">
                <h2>My Latest Posts</h2>
              </div>
              <div class="col-md-12">
                {{#each data}}
                <div class="post-entry-horzontal">
                  <a href="/blogs/{{slug}}">
                    <div class="image" style="background-image: url('/uploads/{{image}}');"></div>
                    <span class="text">
                      <div class="post-meta">
                        <span class="author mr-2"><img src="{{avatar}}" alt="{{authorName}}"> {{authorName}}</span>&bullet;
                        <span class="mr-2">{{createdAt}} </span> &bullet;
                        <span class="ml-2"><span class="fa fa-comments"></span> 3</span>
                      </div>
                      <h2>{{title}}</h2>
                    </span>
                  </a>
                </div>
                {{/each}}
                <!-- END post -->

              </div>
            </div>

          </div>

          <!-- END main-content -->

          